{
    "compilerOptions": {
      /* Language and environment */
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
  
      /* Module system (important for Playwright) */
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
  
      /* Type safety */
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
  
      /* Compatibility */
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
  
      /* Performance */
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
  
      /* Runtime types */
      "types": ["node", "@playwright/test"]
    },
  
   
  }
  