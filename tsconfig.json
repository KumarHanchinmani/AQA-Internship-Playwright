{
    "compilerOptions": {
      /* Language and environment */
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
  
      /* Module system (important for Playwright) */
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
  
      /* Type safety */
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
  
      /* Compatibility */
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
  
      /* Performance */
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
  
      /* Runtime types */
      "types": ["node", "@playwright/test"]
    },
  
    "include": [
      "tests/**/*.ts",
      "pages/**/*.ts",
      "utils/**/*.ts",
      "fixtures/**/*.ts",
      "config/**/*.ts",
      "playwright.config.ts"
    ],
  
    "exclude": [
      "node_modules",
      "playwright-report",
      "test-results",
      "dist"
    ]
  }
  